<% recipes.each do |recipe| %>
  <div style="display: inline-block; height: 280px; width: 280px;">
    <div class="thumbnail", style="background: #fff; height: 275px; width: 275px; box-shadow: 1px 1px 6px rgba(0,0,0,0.2);">
      <div class="caption">
        <h3 class="text-center text-warning"><%= recipe.title %></h3>
        <% user = recipe.user %>
        <div class="bg-danger">
          <%= link_to user.name, user_path(user), class: 'btn btn-sm btn-success text-left' %><span class="btn btn-sm text-muted pull-right"><%= l recipe.created_at, format: :short %></span>
        </div>
        <p class="text-muted"><%= recipe.content %></p>
        <%= link_to 'レシピ詳細', recipe_path(recipe), class: "btn btn-sm btn-warning btn-block" %>
      </div>
    </div>
  </div>
<% end %>