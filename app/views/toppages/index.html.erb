<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>レシピボックス</h1>
        <p>”あの味”、残しませんか？</p>
        <h2>もっと気軽にレシピ保存を。</h2>
        <% if logged_in? %>
          <%= link_to 'レシピを書く', new_recipe_path, class:"btn btn-new-recipe btn-md" %>
          <%= link_to 'マイページへ', user_path(current_user), class:"btn btn-mypage btn-md" %>
        <% else %>
          <%= link_to '新規登録', signup_path, class:"btn btn-new btn-md" %>
          <%= link_to 'ログイン', login_path, class: "btn btn-login btn-md" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<%= render 'recipes/recipes_short', recipes: @recipes %>